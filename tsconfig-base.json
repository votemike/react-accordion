{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "module": "ESNext",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "types": ["node", "jest"]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "*/__tests__/*"
  ],
}